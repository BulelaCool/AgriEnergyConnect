@using AgriEnergyConnect.Models.AgriEnergyConnect.ViewModels
@model RegisterFarmerViewModel

<div class="banner-area text-white text-center d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        <!-- Styled heading to match the Login heading -->
        <h1 class="banner-heading mb-4">Register a Farmer</h1>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <section class="register-form">
                    <form asp-action="RegisterFarmer" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            <label asp-for="Name" class="form-label">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                            <label asp-for="Password" class="form-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Contact" class="form-control" placeholder="Contact Number" />
                            <label asp-for="Contact" class="form-label">Contact</label>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-primary mt-4">Register Farmer</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
