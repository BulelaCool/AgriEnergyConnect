@model Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="banner-area">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="p-4 rounded register-form shadow">

                <h2 class="text-center mb-4 text-white">@ViewData["Title"]</h2>

                <!-- Flash messages -->
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["Success"]</div>
                }

                <!-- Model validation summary -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

                <!-- Form -->
                <form asp-action="AddProduct" method="post" class="mt-3">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Product Name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Category" class="form-control" placeholder="Category" />
                        <label asp-for="Category"></label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-primary btn-lg">Add Product</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
